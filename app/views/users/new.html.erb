<h1>Sign Up</h1>

<%= form_with scope: @user, url: users_path, local: true do |form| %>
    <p>
      <%= form.label :Name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :Email %><br>
      <%= form.text_field :email %>
    </p>
 
    <p>
      <%= form.label :Password %><br>
      <%= form.password_field :password %>
    </p>
   
    <p>
      <%= form.submit "Sign Up"%>
    </p>
  <% end %>

  <br/>
    <%= link_to 'Login', login_path %>