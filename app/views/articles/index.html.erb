<h1>All Articles</h1>
<%= link_to 'New article', new_article_path, :class => "btn btn-primary btn-sm" %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), :class => "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Destroy', article_path(article), method: 'delete', :class => "btn btn-primary btn-sm" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Article', new_article_path, :class => "btn btn-primary btn-sm" %> 
<%= link_to 'Home', root_path, :class => "btn btn-primary btn-sm" %>